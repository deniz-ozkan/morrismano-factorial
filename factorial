ORG 0
LDA FAC
STA TMP
STA SUM
LDA CTR
STA CTRI
BSA DCR
LOP,	CLE
	LDA Y
	CIR
	STA Y
	SZE
	BUN ONE
	BUN ZRO
ONE, 	LDA SUM
	ADD P
	STA P
	CLE
ZRO, 	LDA SUM
	CIL
	STA SUM
	ISZ CTR
	BUN LOP
	BUN LP1
LP1, 	BSA DCR
	LDA CTRI
	STA CTR
	LDA P
	STA SUM
	LDA P0
	STA P
	LDA TMP
	SZA	
	BUN LOP
HLT	
DCR, 	HEX 0
	LDA TMP
	CMA
	INC
	INC
	CMA
	INC
	STA Y
	STA TMP
	BUN DCR I
CTR, 	DEC -8
CTRI,	DEC 0
Y,	DEC 0
TMP, 	DEC 0
P, 	DEC 0
P0,	DEC 0
FAC, 	DEC 8
SUM, 	DEC 0
	END